{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["../common/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../common/tsconfig.json" }]
}
